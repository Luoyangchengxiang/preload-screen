{
  "name": "preload-screen",
  "version": "1.0.1",
  "description": "页面挂载前显示loading动画",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build:ts": "tsc -p tsconfig.json",
    "copy:assets": "cpy \"src/*.css\" dist --flat",
    "build": "pnpm run clean && pnpm run build:ts && pnpm run copy:assets",
    "prepare": "pnpm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Luoyangchengxiang/preload-screen.git"
  },
  "keywords": [
    "react",
    "preloadScreen",
    "screen",
    "preload",
    "loading",
    "skeleton",
    "spinner",
    "preload-screen"
  ],
  "author": {
    "name": "Aaron Cheng",
    "email": "aaron.cheng.luoyang@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/Luoyangchengxiang/preload-screen#readme",
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@types/node": "^24.5.2",
    "cpy-cli": "^6.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}